@model AspMVCEcomerce.Models.Product
@{
    var product = ViewData["product"] as Product;
}
@if(product != null){
<div class="card bg-danger text-white">
    <h1 class="card-header">@product.Name </h1>
    <div class="card-body">
        <p class="card-text">
            price: @product.Price
        </p>
    </div>
</div>
}